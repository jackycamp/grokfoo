{
  "manifest_version": 2,
  "name": "Grok Foo",
  "version": "1.0",
  "description": "Select text and send it to Grok with commands",
  "permissions": ["tabs", "contextMenus", "https://x.com/*"],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "icon48.png"
  }
}
